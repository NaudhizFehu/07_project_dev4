package com.dev04.server.member;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;

import org.hibernate.annotations.ColumnDefault;

import lombok.Getter;
import lombok.Setter;
import lombok.ToString;

@Entity
//name : 식별자 생성기 이름, sequenceName : DB에 등록될 시퀀스 이름, initialValue : 시작하는 수, allocationSize : 증가하는 수
@SequenceGenerator(name="IDX_SEQ_GEN", sequenceName="IDX_NO_SEQ", initialValue=1, allocationSize = 1)
@ToString
@Table(name="MEMBER")
public class Member {
	
	@Id @Getter
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "IDX_SEQ_GEN")
	private int idx;
	
	@Getter @Setter
	@Column(name="ID", unique = true, nullable = false, length = 10)
	private String id;

	@Getter @Setter
	@Column(name="PASSWORD", nullable = false, length = 15)
	private String password;
	
	@Getter @Setter
	@Column(name="EMAIL", nullable = false, length = 40)
	private String email;
	
	@Getter @Setter
	@Column(name="NAME", nullable = false, length = 50)
	private String name;
	
}
