package com.dev04.server.DAO;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class MemberService {
	
	@Autowired
	private MemberRepository memberRepository;
	
	//회원 조회
	public Member loginMember(String id, String password) {
		Optional<Member> member = memberRepository.findByNameAndPassword(id, password);
		if(member.isPresent()) {
			return member.get();
		}else {
			System.out.println("멤버를 찾지 못하였습니다.");
			return null; 
		}
	}
	
	//회원 가입
	public void signUpMember() {
		Member member1 = new Member();
		member1.setId("hou");
		member1.setPassword("hoho");
		member1.setName("호우");
		member1.setEmail("hou@naver.com");
		member1.setBirthday("2021-05-13");
		member1.setPhoneNumber("01012345678");
		member1.setAddress1("a");
		member1.setAddress2("b");
		member1.setZipcode("12345");
		member1.setRegDate("2021-05-13");
		System.out.println("signUpMember");
		System.out.println("member 이름 : " + member1.getName());
		memberRepository.save(member1);
	}
}
